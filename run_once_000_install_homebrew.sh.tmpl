#!/usr/bin/env bash
set -euo pipefail

echo "üîç Checking for Homebrew/Linuxbrew installation‚Ä¶"

if command -v brew >/dev/null 2>&1; then
  echo "‚úÖ Homebrew is already installed."
else
  {{ if eq .chezmoi.os "darwin" }}
  echo "üçé Installing Homebrew ‚Ä¶"
  NONINTERACTIVE=1 /bin/bash -c \
    "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  {{ else if eq .chezmoi.os "linux" }}
  echo "üêß Installing Linuxbrew‚Ä¶"

  # Install basic build tools
  if command -v apt >/dev/null 2>&1; then
    sudo apt-get update
    sudo apt-get install -y build-essential curl file git
  elif command -v dnf >/dev/null 2>&1; then
    sudo dnf install -y @development-tools curl file git
  elif command -v pacman >/dev/null 2>&1; then
    sudo pacman -Sy --needed base-devel curl file git
  else
    echo "‚ùå Unsupported package manager. Install build tools manually."
    exit 1
  fi

  NONINTERACTIVE=1 /bin/bash -c \
    "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  {{ end }}
  echo "‚úÖ Homebrew installed."
fi

# Set up Brewfile path
BREWFILE="{{ .chezmoi.sourceDir }}/private_Brewfile"

if [[ -f "$BREWFILE" ]]; then
  echo "üì¶ Installing from Brewfile‚Ä¶"
  brew bundle --file="$BREWFILE"
  echo "‚úÖ Brewfile packages installed."
else
  echo "‚ÑπÔ∏è  No Brewfile found at $BREWFILE ‚Äî skipping package installation."
fi
